.progress-bar {
  width: 100%;
  height: 12px;
  background: rgba(255,255,255,0.1);
  border-radius: 6px;
  overflow: hidden;
  margin: 1rem 0;
}
.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #7d3cff, #00e5ff);
  box-shadow: 0 0 12px rgba(0,229,255,0.6);
  transition: width 0.3s ease;
}
